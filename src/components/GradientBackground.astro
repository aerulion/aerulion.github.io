    .gradient-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        overflow: hidden;
    }

    .gradient-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.8;
        mix-blend-mode: multiply;
        animation: float 20s infinite ease-in-out;
    }

    :global([data-theme="dark"]) .gradient-blob {
        mix-blend-mode: lighten;
        opacity: 0.5;
        filter: blur(70px);
    }

    .blob-1 {
        width: 400px;
        height: 400px;
        background: var(--primary-gradient);
        top: -15%;
        left: -15%;
        animation-delay: 0s;
        animation-duration: 25s;
    }

    .blob-2 {
        width: 300px;
