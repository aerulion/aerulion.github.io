---
import {getCurrentYear} from '../utils/dates';
import {commitUrl, repoUrl, shortCommitHash} from "../utils/git.ts";

const currentYear = getCurrentYear();
---

<footer class="footer-section">
    <div class="container">
        <div class="footer-content">
            <p>
                &copy; 2022-{currentYear}
                <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="footer-link">
                    aerulion.net
                </a>
                {' @ '}
                <a href={commitUrl} target="_blank" rel="noopener noreferrer" class="footer-link commit-hash">
                    {shortCommitHash}
                </a>
            </p>
        </div>
    </div>
</footer>

<style>
    .footer-section {
        padding: var(--spacing-lg) 0;
        background: var(--bg-secondary);
        border-top: 1px solid var(--border-color);
    }

    .footer-content {
        text-align: center;
    }

    .footer-content p {
        color: var(--text-muted);
        font-size: var(--font-size-base);
        margin: 0;
    }

    .footer-link {
        color: inherit;
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

    .footer-link:hover {
        opacity: 0.7;
    }

    .commit-hash {
        font-family: 'Courier New', monospace;
        font-size: 0.9em;
    }
</style>